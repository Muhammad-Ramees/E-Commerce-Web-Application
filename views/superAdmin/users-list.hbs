<section class="m-5">
    <div class="container">

        <div class="frost-table">
            <table>
                <thead>
                    <tr>
                        <th scope="col">Profile</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr class="tr">
                        <td style="width:10px;" data-label="Image"><img style="border-radius:.5rem" width="50px"
                                height="50px" src="/profile-img/{{this._id}}.jpg" alt=""></td>
                        <td data-label="Name">{{this.fullname}}</td>
                        <td data-label="Category">{{this.email}}</td>
                        <td>
                            <a class="btn btn-primary" href="/superAdmin/view-cart/{{this._id}}">cart products</a>
                            <a class="btn btn-danger" href="/superAdmin/delete-user/{{this._id}}"
                                onclick="return confirm('Are you sure want to delete this user named {{this.fullname}}')">remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</section>